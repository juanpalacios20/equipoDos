<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PicoBotella" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Theme.PicoBotella" parent="Base.Theme.PicoBotella" />

    <!-- Estilo global para los botones -->
    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/rounded_button</item> <!-- Fondo personalizado -->
        <item name="android:textColor">@color/orange_dark</item> <!-- Texto en color naranja oscuro -->
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Borde siempre blanco -->
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeErrorColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="counterTextColor">@color/white</item>
        <item name="counterOverflowTextColor">@color/white</item>
        <!-- Fondo transparente -->
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <!-- Grosor del borde -->
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
    </style>

</resources>
